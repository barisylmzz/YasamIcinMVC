@model List<YasamIcin.UI.MVC.Models.SayfaDetay>
@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12">
    <div class=" col-lg-12" style="margin-bottom:40px"><h1 style="margin-left:300px"> GÜNCELLE</h1></div>
    @foreach (var item in Model)
    {
        <div class="col-lg-2"><input type="button" onclick="Guncelle('@item.Baslik')" value="@item.Baslik" class="btn btn-primary" style="margin-bottom:20px" /> </div>
        <div class="col-lg-1" style="margin-bottom:20px"> </div>
        
    }
</div>

    <div id="guncellenecekText">

    </div>



<script>
    function Guncelle(baslik)
    {
        $.ajax
            (
            {
                type: "GET",
                url: '@Url.Action("_TextGunceller", "Icerik")',
                    data: { baslik: baslik },
                    success: function (data) {
                        document.getElementById("guncellenecekText").innerHTML = data;
                    }

          }
        )
     }
</script>